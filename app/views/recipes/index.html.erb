<table>
  <tr>
    <td>Image</td>
    <td>Title</td>
    <td>Rank</td>
  </tr>
  <tr>
    <% @recipes.each do |recipe| %>
    <tr>
      <td><%= link_to image_tag(recipe["image_url"], size: "150"), recipe["source_url"]%></td>
      <td><%= sanitize "<a href='#{recipe["source_url"]}'>#{recipe["title"]}</a>" %></td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  </tr>
  <% end %>
</table>

<p>Powered by Food2Fork.com</p>
