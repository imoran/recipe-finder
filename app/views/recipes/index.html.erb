<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3 head">Recipe Finder</h1>
    <p class="lead">What should we make for dinner tonight?</p>
    <form>
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search" name="search">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<table class="table table-hover table-bordered">
  <thead class="thead-inverse">
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Rank</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to image_tag(recipe["image_url"], size: "200"), recipe["source_url"]%></td>
        <td><%= sanitize "<a href='#{recipe["source_url"]}'>#{recipe["title"]}</a>" %></td>
        <td><%= recipe["social_rank"].to_i %></td>
      </tr>
    </tr>
    <% end %>
  </tbody>
</table>

<p>Powered By Food2Fork.com</p>
